package com.residencia.commerce.valid;

import java.lang.annotation.Documented;

import javax.validation.Constraint;
import javax.validation.Payload;
import javax.validation.constraints.NotBlank;
import javax.validation.constraints.Pattern;

import org.hibernate.validator.constraints.Length;

public class Valid {
	
	
	@NotBlank(message = "O nome é obrigatório")
	@Length(min = 3, max = 35, message = "O nome deverá ter no máximo {max} caracteres")
	@Pattern (regexp ="^[A-Za-z]{1,32}$", message = "O nome só deve conter letras")
	@Documented
	@Constraint(validatedBy = {})
	public @interface ValidaNome {

	    String message() default "Preencha o campo corretamente";

	    Class<?>[] groups() default {};

	    Class<? extends Payload>[] payload() default {};
	}
}
